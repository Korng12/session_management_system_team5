{
  "info": {
    "name": "Session Management System - CRUD APIs",
    "description": "Room and Session CRUD operations for conference management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080/admin"
    },
    {
      "key": "sessionId",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Room CRUD",
      "item": [
        {
          "name": "List All Rooms",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Cookie",
                "value": "JSESSIONID={{sessionId}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/rooms",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rooms"]
            }
          }
        },
        {
          "name": "Create Room",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Cookie",
                "value": "JSESSIONID={{sessionId}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Conference Hall A\",\n  \"capacity\": 100\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/rooms",
              "host": ["{{baseUrl}}"],
              "path": ["rooms"]
            }
          }
        },
        {
          "name": "Update Room",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Cookie",
                "value": "JSESSIONID={{sessionId}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Hall A\",\n  \"capacity\": 150\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/rooms/1",
              "host": ["{{baseUrl}}"],
              "path": ["rooms", "1"]
            }
          }
        },
        {
          "name": "Delete Room",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Cookie",
                "value": "JSESSIONID={{sessionId}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/rooms/1",
              "host": ["{{baseUrl}}"],
              "path": ["rooms", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Session CRUD",
      "item": [
        {
          "name": "Get All Sessions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Cookie",
                "value": "JSESSIONID={{sessionId}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/sessions",
              "host": ["{{baseUrl}}"],
              "path": ["api", "sessions"]
            }
          }
        },
        {
          "name": "Get Sessions Paginated",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Cookie",
                "value": "JSESSIONID={{sessionId}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/sessions/paginated?page=0&size=10&sortBy=startTime&sortDirection=desc",
              "host": ["{{baseUrl}}"],
              "path": ["api", "sessions", "paginated"],
              "query": [
                {"key": "page", "value": "0"},
                {"key": "size", "value": "10"},
                {"key": "sortBy", "value": "startTime"},
                {"key": "sortDirection", "value": "desc"}
              ]
            }
          }
        },
        {
          "name": "Get Session by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Cookie",
                "value": "JSESSIONID={{sessionId}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/sessions/1",
              "host": ["{{baseUrl}}"],
              "path": ["sessions", "1"]
            }
          }
        },
        {
          "name": "Create Session",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Cookie",
                "value": "JSESSIONID={{sessionId}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Opening Keynote\",\n  \"chairId\": 4,\n  \"roomId\": 1,\n  \"conferenceId\": 1,\n  \"startTime\": \"2026-01-15T09:00:00\",\n  \"endTime\": \"2026-01-15T10:30:00\",\n  \"status\": \"SCHEDULED\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/sessions",
              "host": ["{{baseUrl}}"],
              "path": ["sessions"]
            }
          }
        },
        {
          "name": "Update Session",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Cookie",
                "value": "JSESSIONID={{sessionId}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Keynote\",\n  \"chairId\": 4,\n  \"roomId\": 2,\n  \"conferenceId\": 1,\n  \"startTime\": \"2026-01-15T10:00:00\",\n  \"endTime\": \"2026-01-15T11:30:00\",\n  \"status\": \"SCHEDULED\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/sessions/1",
              "host": ["{{baseUrl}}"],
              "path": ["sessions", "1"]
            }
          }
        },
        {
          "name": "Delete Session",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Cookie",
                "value": "JSESSIONID={{sessionId}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/sessions/1",
              "host": ["{{baseUrl}}"],
              "path": ["sessions", "1"]
            }
          }
        },
        {
          "name": "Get Conferences (for dropdown)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Cookie",
                "value": "JSESSIONID={{sessionId}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/conferences",
              "host": ["{{baseUrl}}"],
              "path": ["api", "conferences"]
            }
          }
        },
        {
          "name": "Get Users/Chairs (for dropdown)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Cookie",
                "value": "JSESSIONID={{sessionId}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users"]
            }
          }
        }
      ]
    }
  ]
}
